<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/dimen_37dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/result" />

    <TextView
        android:id="@+id/number_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="13336人通关"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_23sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@color/color_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/congratulations_on_the_following_winners"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_12sp" />

        <ImageView
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:background="@color/color_white" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/the_winners"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_marginLeft="@dimen/dimen_35dp"
        android:layout_marginRight="@dimen/dimen_35dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
